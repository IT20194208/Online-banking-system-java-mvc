 <!-- employee crud paths-->	
 
 <!-- employee insert paths -->
 <servlet>
		<servlet-name>empInsert</servlet-name>
		<servlet-class>employee.empServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>empInsert</servlet-name>
		<url-pattern>/empInsert</url-pattern>
	</servlet-mapping>
	
	<!-- employee delete path -->
	
 <servlet>
		<servlet-name>empDelete</servlet-name>
		<servlet-class>employee.empDeleteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>empDelete</servlet-name>
		<url-pattern>/empDelete</url-pattern>
	</servlet-mapping>
	
	
	
	<!-- account paths -->
	
	
	<servlet>
		<servlet-name>accountInsert</servlet-name>
		<servlet-class>account.acc_type_insert</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>accountInsert</servlet-name>
		<url-pattern>/accountinsert</url-pattern>
	</servlet-mapping>
	
	<!-- update account  -->
	
	
	<servlet>
		<servlet-name>accountUpdate</servlet-name>
		<servlet-class>account.updateAccountServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>accountUpdate</servlet-name>
		<url-pattern>/updateAccount</url-pattern>
	</servlet-mapping>
	
	<!-- delete account controller(servlet path) -->
	
	
	<servlet>
		<servlet-name>accountDelete</servlet-name>
		<servlet-class>account.deleteAccountServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>accountDelete</servlet-name>
		<url-pattern>/deleteAccount</url-pattern>
	</servlet-mapping>
	
	
	


